@model ConcertTicketSystem.DAL.Entity.Ticket

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Boleta</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="UserDate" class="control-label"></label>
                <input asp-for="UserDate" class="form-control" />
                <span asp-validation-for="UserDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsUsed" /> @Html.DisplayNameFor(model => model.IsUsed)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="EntranceGate" class="control-label"></label>
                <input asp-for="EntranceGate" class="form-control" />
                <span asp-validation-for="EntranceGate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar cambios" class="btn btn-outline-primary" /> |
                <a asp-action="Index"class="btn btn-outline-success">Regresar al registro</a>
            </div>
        </form>
    </div>
</div>

<div>
   
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
